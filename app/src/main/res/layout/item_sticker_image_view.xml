<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    android:layout_centerInParent="true"
    android:layout_margin="@dimen/_2sdp"
    android:foreground="?selectableItemBackgroundBorderless"
    android:padding="0dp">

    <ImageView
        android:id="@+id/item_sticker_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/add_more_placeholder" />
    <!--        tools:src="@tools:sample/avatars[0]" />-->
    <ImageView
        android:id="@+id/listItem_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="#99000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/item_sticker_image_view"
        app:layout_constraintEnd_toEndOf="@+id/item_sticker_image_view"
        app:layout_constraintStart_toStartOf="@+id/item_sticker_image_view"
        app:layout_constraintTop_toTopOf="@+id/item_sticker_image_view" />

